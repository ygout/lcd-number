{
    "compilerOptions": {
      "target": "es6", /*Specify ECMAScript target version*/
      "rootDir": "src",/*ts source direcotry*/
      "module": "commonjs",
      "outDir": "build", /*where to compile javascript files*/
      "alwaysStrict": true,
      "strictNullChecks": true,
      "noUnusedLocals": true,
      "noImplicitAny": false,
    },
    "compileOnSave": true,
    "exclude": [
        "node_modules"
    ],
    "include": [
        "./src/**/*",
        "types/**/*.d.ts"
    ]
  }